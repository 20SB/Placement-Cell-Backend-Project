<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('_bootstrap_meta')%>
        <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
        <link rel="stylesheet" href="/css/home.css" />
        <link rel="stylesheet" href="/css/common.css" />
        <link rel="shortcut icon" href="/images/stds.png" type="image/x-icon" />
        <title>Home</title>
    </head>

    <body>
        <%- include('_header') %>
        <div class="w-75 mx-auto mt-5">
            <br />

            <div class="row">
                <!-- page heading -->
                <div class="col-6">
                    <h2>List of Students:</h2>
                </div>

                <!-- Add Student Button -->
                <div class="col-6 d-flex justify-content-end">
                    <a href="/students/create" type="button" class="btn btn-success align-self-center">+ Add Student</a>
                </div>
            </div>

            <!-- Students List -->
            <% if(students.length > 0) {%>
            <div class="mt-3 mb-3">
                <table class="table table-striped">
                    <!-- table column headings -->
                    <thead class="thead-dark">
                        <tr>
                            <th scope="col">Batch</th>
                            <th scope="col">Name</th>
                            <th scope="col">Email</th>
                            <th scope="col">Contact</th>
                            <th scope="col">DSA</th>
                            <th scope="col">WEB</th>
                            <th scope="col">REACT</th>
                            <th scope="col">Interview</th>
                            <th scope="col" class="text-end">Action</th>
                        </tr>
                    </thead>

                    <!-- table body -->
                    <tbody id="myTable">
                        <% for(let student of students) {%>
                        <tr>
                            <th scope="row"><%=student.batch%></th>
                            <td><%=student.name%></td>
                            <td><%=student.email%></td>
                            <td><%=student.contactNumber%></td>
                            <td><%=student.dsa%></td>
                            <td><%=student.webd%></td>
                            <td><%=student.react%></td>

                            <!-- Interview Status -->
                            <% if(student.interviews.length) {%>
                            <td>
                                <% for(let company of student.interviews){%>
                                <span class="compnay_name"><%=company.company%></span>
                                <small class="compnay_result"><%=company.result%></small><br />
                                <%}%>
                            </td>
                            <%}else{%>
                            <td>NONE</td>
                            <%}%>

                            <!-- delete button for each student -->
                            <td style="display: flex; justify-content: space-around; align-items: center; border: none">
                                <a href="/students/delete/<%=student.id%>" type="button" class="btn btn-danger btn-small dlt-btn">
                                    <span class="material-symbols-outlined"> delete </span>
                                </a>
                            </td>
                        </tr>
                        <%}%>
                    </tbody>
                </table>
            </div>
            <%}else{%>
            <div class="w-75 mx-auto mt-5">
                <h2>No Records Found</h2>
            </div>
            <%}%>
        </div>
        <%- include('_bootstrap_script')%>
        <script>
            localStorage.setItem("lastOpened", "#for-all");
        </script>
    </body>
</html>
