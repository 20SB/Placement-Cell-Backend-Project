<!DOCTYPE html>
<html lang="en">
    <head>
        <%- include('_bootstrap_meta')%>
        <link rel="stylesheet" href="/css/sign.css" />
        <link rel="stylesheet" href="/css/common.css" />
        <link rel="shortcut icon" href="/images/signup.PNG" type="image/x-icon" />
        <title>Sign Up</title>
    </head>
    <body>
        <%- include('_header')%>
        <div class="w-50 mx-auto mt-5 frm-container">
            <!-- form heading -->
            <div class="mx-auto mt-3 mb-4" style="width: 100px">
                <h4>Sign Up</h4>
            </div>

            <!-- sign up form -->
            <form action="/users/create" method="post">
                <!-- name input -->
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter Your Name..." required />

                <!-- email input -->
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" id="email" placeholder="abc@email.com" name="email" required />
                </div>

                <!-- password input -->
                <div class="mb-3">
                    <label for="password" class="form-label">Create Password</label>
                    <input type="password" class="form-control" id="password" name="password" required />
                </div>

                <!-- confirm password input -->
                <div class="mb-3">
                    <label for="Password" class="form-label">Confirm Password</label>
                    <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required />
                </div>

                <!-- sign up button -->
                <div class="mb-4 mt-3" style="display: flex; justify-content: center">
                    <button type="submit" class="btn btn-success btn-block mb-4">Sign Up</button>
                </div>
            </form>

            <!-- log in link -->
            <div class="mx-auto mb-3 mt-3" style="width: 300px">
                <a href="/users/signin" style="margin-left: 100px">Log in Instead</a>
            </div>
            
        </div>
        <%- include('_bootstrap_script')%>
    </body>
</html>
